#!/bin/bash
if (( !$# )); then
  echo "Usage:   $0 [perl_cli_params] <perl_code>"
  echo "Hint:    Use planes command to display columns."
  echo "Examples: "
  echo "  plane 'print @F[0]' # white space delimited columns"
  echo "  plane -F\\\" 'print @F[-2]' # quotes delimited columns"
  exit
fi

COMMAND="$1"
shift
perl $* -lane "$COMMAND" 
